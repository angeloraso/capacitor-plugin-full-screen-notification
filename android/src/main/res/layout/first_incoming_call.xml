<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="370dip"
  android:background="@drawable/shape"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/icon"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:contentDescription="App icon"
      android:src="@drawable/icon" />

    <TextView
      android:id="@+id/callerNameId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:textColor="#455346"
      android:textSize="20dip"
      android:textStyle="bold"
      android:padding="5dp" />

    <TextView
      android:id="@+id/callerNumberId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:textSize="15dip"
      android:textColor="#455346"
      android:gravity="center"/>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="20dip"
    style="?android:attr/buttonBarStyle">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

        <Button
          android:id="@+id/declineButton"
          android:layout_width="70dip"
          android:layout_height="70dip"
          android:background="@drawable/button"
          android:backgroundTint="#e76565"
          android:drawableStart="@drawable/call_end"
          style="?android:attr/borderlessButtonStyle"/>

        <TextView
            android:id="@+id/declineButtonTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#455346"
            android:textSize="20dip"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="center"
        style="?android:attr/buttonBarStyle">

      <Button
          android:id="@+id/answerButton"
          android:layout_width="70dip"
          android:layout_height="70dip"
          android:background="@drawable/button"
          android:backgroundTint="#157f1f"
          android:drawableStart="@drawable/call"
          android:radius="6dp"
          style="?android:attr/borderlessButtonStyle"/>

      <TextView
          android:id="@+id/answerButtonTextId"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:textColor="#455346"
          android:textSize="20dip"
          android:gravity="center"/>
    </LinearLayout>

  </LinearLayout>

</LinearLayout>
